<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Coulisses" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->





        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/Widget.SpectaclePlus.CardView</item>
        <item name="materialButtonStyle">@style/Widget.SpectaclePlus.Button</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



    <style name="FilterChipUnselected" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_unselected_bg</item>
        <item name="android:textColor">@color/chip_unselected_text</item>
        <item name="chipIconTint">@color/chip_unselected_icon</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>



    <!-- Style pour TextInputLayout -->
    <style name="SearchInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/input_border_normal</item>
        <item name="hintTextColor">@color/input_hint_color</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <style name="FilterChipSelected" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_selected_bg</item>
        <item name="android:textColor">@color/chip_selected_text</item>
        <item name="chipIconTint">@color/chip_selected_icon</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_gray</item>
    </style>

    <style name="Widget.SpectaclePlus.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>



    <style name="Widget.SpectaclePlus.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>